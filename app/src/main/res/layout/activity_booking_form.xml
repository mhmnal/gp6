<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/dashboard1"
    android:layout_height="match_parent"
    tools:context=".BookingForm">

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/cardView"
        android:layout_width="320dp"
        android:layout_height="640dp"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="#152b3e"
        app:neumorph_shadowColorLight="#35506a"
        app:neumorph_shadowElevation="6dp"
        app:cardCornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.326">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/carnivales"
            android:text="CAR DETAILS"
            android:textColor="@color/white_primary"
            android:textSize="45sp" />

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120sp"
            android:background="@drawable/btnbg2"
            android:elevation="5dp"
            android:inputType="number"
            android:fontFamily="@font/fjord_one"
            android:hint="Phone Number"
            android:padding="10sp"
            android:textColor="@color/dark_blue"
            android:textColorHint="@color/dark_blue" />

        <EditText
            android:id="@+id/etCarBrand"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:background="@drawable/btnbg2"
            android:elevation="5dp"
            android:fontFamily="@font/fjord_one"
            android:hint="Car Brand"
            android:padding="10sp"
            android:textColor="@color/dark_blue"
            android:textColorHint="@color/dark_blue" />


        <EditText
            android:id="@+id/etCarModel"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="280dp"
            android:background="@drawable/btnbg2"
            android:elevation="5dp"
            android:fontFamily="@font/fjord_one"
            android:hint="Car Model"
            android:padding="10sp"
            android:textColor="@color/dark_blue"
            android:textColorHint="@color/dark_blue"/>

        <EditText
            android:id="@+id/etCarColor"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="360dp"
            android:background="@drawable/btnbg2"
            android:elevation="5dp"
            android:fontFamily="@font/fjord_one"
            android:hint="Car Color"
            android:padding="10sp"
            android:textColor="@color/dark_blue"
            android:textColorHint="@color/dark_blue" />

        <EditText
            android:id="@+id/etCarPlate"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="440dp"
            android:background="@drawable/btnbg2"
            android:elevation="5dp"
            android:fontFamily="@font/fjord_one"
            android:hint="Car Plate"
            android:padding="10sp"
            android:textColor="@color/dark_blue"
            android:textColorHint="@color/dark_blue" />

        <soup.neumorphism.NeumorphButton
            android:id="@+id/btnBConfirm"
            app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="530dp"
            android:background="@drawable/btnbg2"
            android:fontFamily="@font/fjord_one"
            android:text="CONFIRM"
            android:textColor="@color/white_primary"
            android:textStyle="bold"
            app:neumorph_lightSource="leftTop"
            app:neumorph_shadowColorDark="#152b3e"
            app:neumorph_shadowColorLight="#35506a"
            app:neumorph_shadowElevation="6dp"/>


    </soup.neumorphism.NeumorphCardView>
</androidx.constraintlayout.widget.ConstraintLayout>