<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/dashboard1"
    android:layout_height="match_parent"
    tools:context=".BookingForm">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="320dp"
        android:layout_height="640dp"
        app:cardBackgroundColor="@color/white_primary"
        app:cardCornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.326">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/carnivales"
            android:text="CAR DETAILS"
            android:paddingHorizontal="12dp"
            android:textColor="@color/dark_blue"
            android:textSize="45sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120sp"
            android:background="@drawable/btnbg1"
            android:inputType="number"
            android:fontFamily="@font/fjord_one"
            android:hint="Phone Number"
            android:padding="10sp"
            android:textColor="@color/white_primary"
            android:textColorHint="@color/white_primary" />

        <EditText
            android:id="@+id/etCarBrand"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:background="@drawable/btnbg1"
            android:fontFamily="@font/fjord_one"
            android:hint="Car Brand"
            android:padding="10sp"
            android:textColor="@color/white_primary"
            android:textColorHint="@color/white_primary" />


        <EditText
            android:id="@+id/etCarModel"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="280dp"
            android:background="@drawable/btnbg1"
            android:fontFamily="@font/fjord_one"
            android:hint="Car Model"
            android:padding="10sp"
            android:textColor="@color/white_primary"
            android:textColorHint="@color/white_primary"/>

        <EditText
            android:id="@+id/etCarColor"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="360dp"
            android:background="@drawable/btnbg1"
            android:fontFamily="@font/fjord_one"
            android:hint="Car Color"
            android:padding="10sp"
            android:textColor="@color/white_primary"
            android:textColorHint="@color/white_primary"/>

        <EditText
            android:id="@+id/etCarPlate"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="440dp"
            android:background="@drawable/btnbg1"
            android:fontFamily="@font/fjord_one"
            android:hint="Car Plate"
            android:padding="10sp"
            android:textColor="@color/white_primary"
            android:textColorHint="@color/white_primary" />

        <Button
            android:id="@+id/btnBConfirm"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="530dp"
            android:textSize="17sp"
            android:background="@drawable/btnbg3"
            android:fontFamily="@font/fjord_one"
            android:text="CONFIRM"
            android:textColor="@color/black"
            />


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>