<?xml version="1.0" encoding="utf-8"?>

<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        tools:context=".ScrollableBookingForm">

        <TextView
            android:id="@+id/tvDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fjord_one"
            android:text="Date"
            android:textColor="#1E3D59"
            android:textColorHint="#FFFFFF"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/fjord_one"
            android:text="Current Date"
            android:textColor="#1E3D59"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/fjord_one"
            android:text="Pick your day of booking"
            android:textColor="#1E3D59"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDate2" />

        <TextView
            android:id="@+id/tvDate3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="516dp"
            android:fontFamily="@font/fjord_one"
            android:textColor="#1E3D59"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ba"
            app:layout_constraintVertical_bias="0.085" />

        <Button
            android:id="@+id/ba"
            android:layout_width="124dp"
            android:layout_height="38dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/btnsettings"
            android:fontFamily="@font/fjord_one"
            android:text="Select Here"
            android:textColor="#F5F0E1"
            android:textColorHint="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/fjord_one"
            android:text="Pick time of the Day"
            android:textColor="#1E3D59"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ba" />

        <Button
            android:id="@+id/bi"
            android:layout_width="124dp"
            android:layout_height="38dp"
            android:background="@drawable/btnsettings"
            android:fontFamily="@font/fjord_one"
            android:text="Select Here"
            android:textColor="#F5F0E1"
            android:textColorHint="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/tvTimeOfTheDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/fjord_one"
            android:textColor="#1E3D59"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bi"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/tvHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/fjord_one"
            android:text="Pick how long you are staying"
            android:textColor="#1E3D59"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bi" />

        <Spinner
            android:id="@+id/bu"
            android:layout_width="124dp"
            android:layout_height="50dp"
            android:background="@drawable/btnsettings"
            android:fontFamily="@font/fjord_one"
            android:gravity="center"
            android:popupBackground="@drawable/btnsettings"
            android:textColor="#F5F0E1"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHours" />

        <TextView
            android:id="@+id/tvTips3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/fjord_one"
            android:text="Tips"
            android:textColor="#1E3D59"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bu" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/fjord_one"
            android:gravity="center_horizontal"
            android:text="Order your parking when entering the parking lot to save time!"
            android:textColor="#1E3D59"
            android:textColorHint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTips3"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvHours2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/tvTips3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bu"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvPhoneNumber3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/fjord_one"
            android:text="Phone Number"
            android:textColor="#1E3D59"
            android:textColorHighlight="#1E3D59"
            android:textColorHint="#1E3D59"
            android:textColorLink="#1E3D59"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <EditText
            android:id="@+id/etPhoneNumber3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/fjord_one"
            android:inputType="textPersonName"
            android:textColor="#1E3D59"
            android:textColorHighlight="#1E3D59"
            android:textColorHint="#1E3D59"
            android:textColorLink="#1E3D59"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumber3" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fjord_one"
            android:text="Please enter details below"
            android:textColor="#1E3D59"
            android:textColorHighlight="#1E3D59"
            android:textColorHint="#1E3D59"
            android:textColorLink="#1E3D59"
            android:textSize="20sp"
            android:layout_marginTop="300dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/tvCarBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/fjord_one"
            android:text="Car Brand"
            android:textColor="#1E3D59"
            android:textColorHighlight="#F5F0E1"
            android:textColorHint="#F5F0E1"
            android:textColorLink="#F5F0E1"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPhoneNumber3" />

        <EditText
            android:id="@+id/eb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/fjord_one"
            android:inputType="textPersonName"
            android:textColor="#1E3D59"
            android:textColorHighlight="#1E3D59"
            android:textColorHint="#1E3D59"
            android:textColorLink="#1E3D59"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCarBrand" />

        <TextView
            android:id="@+id/tvCarModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:fontFamily="@font/fjord_one"
            android:text="Car Model"
            android:textColor="#1E3D59"
            android:textColorHighlight="#1E3D59"
            android:textColorHint="#1E3D59"
            android:textColorLink="#1E3D59"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eb" />

        <EditText
            android:id="@+id/ec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/fjord_one"
            android:inputType="textPersonName"
            android:textColor="#1E3D59"
            android:textColorHighlight="#1E3D59"
            android:textColorHint="#1E3D59"
            android:textColorLink="#1E3D59"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCarModel" />

        <TextView
            android:id="@+id/tvCarColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/fjord_one"
            android:text="Car Color"
            android:textColor="#1E3D59"
            android:textColorHighlight="#1E3D59"
            android:textColorHint="#1E3D59"
            android:textColorLink="#1E3D59"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ec" />

        <EditText
            android:id="@+id/ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/fjord_one"
            android:inputType="textPersonName"
            android:textColor="#1E3D59"
            android:textColorHighlight="#1E3D59"
            android:textColorHint="#1E3D59"
            android:textColorLink="#1E3D59"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCarColor" />

        <TextView
            android:id="@+id/tvCarPlate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/fjord_one"
            android:text="Car Plate"
            android:textColor="#1E3D59"
            android:textColorHighlight="#1E3D59"
            android:textColorHint="#1E3D59"
            android:textColorLink="#1E3D59"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed" />

        <EditText
            android:id="@+id/eelate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/fjord_one"
            android:inputType="textPersonName"
            android:textColor="#1E3D59"
            android:textColorHighlight="#1E3D59"
            android:textColorHint="#1E3D59"
            android:textColorLink="#1E3D59"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCarPlate" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/fjord_one"
            android:text="*This booking form is to ensure that we will be able to contact you in the case of emergency"
            android:textColor="#1E3D59"
            android:textColorHighlight="#1E3D59"
            android:textColorHint="#1E3D59"
            android:textColorLink="#1E3D59"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eelate" />

        <Button
            android:id="@+id/bw"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/btnsettings"
            android:fontFamily="@font/fjord_one"
            android:text="Confirm"
            android:textColor="#F5F0E1"
            android:textColorHighlight="#F5F0E1"
            android:textColorHint="#F5F0E1"
            android:textColorLink="#F5F0E1"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView17"
            app:layout_constraintTop_toBottomOf="@+id/eelate" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

