<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/design3"
    tools:context=".LoginScreen">


    <soup.neumorphism.NeumorphButton
        android:id="@+id/btnLoginScr"
        app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/fjord_one"
        android:text="LOGIN"
        android:textColor="@color/white_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegisterScr"
        app:layout_constraintVertical_bias="0.0"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="#152b3e"
        app:neumorph_shadowColorLight="#35506a"
        app:neumorph_shadowElevation="6dp" />
    />

    <soup.neumorphism.NeumorphButton
        android:id="@+id/btnRegisterScr"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        app:neumorph_backgroundColor="@color/red2"
        android:elevation="6dp"
        android:fontFamily="@font/fjord_one"
        android:text="REGISTER"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="#1b3750"
        app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
        app:neumorph_shadowColorLight="#1e3d59"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="45sp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/sakurata"
        android:gravity="center_horizontal|center_vertical"
        android:text="SMART"
        android:textColor="#F5F0E1"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="35sp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sakurata"
        android:gravity="center_horizontal|center_vertical"
        android:text="P ARKING"
        android:textColor="#F5F0E1"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.587"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.073" />
</androidx.constraintlayout.widget.ConstraintLayout>