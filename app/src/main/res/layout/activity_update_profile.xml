<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard1"
    tools:context=".UpdateProfile">


    <TextView
        android:id="@+id/tvProfileH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/carnivales"
        android:text="UPDATE"
        android:textColor="#F5F0E1"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041"  />

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:hapticFeedbackEnabled="true"
        app:cardBackgroundColor="@color/white_primary"
        app:cardCornerRadius="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.901">


        <TextView
            android:id="@+id/tvProfileName"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:fontFamily="@font/carnivales"
            android:text="Name"
            android:textColor="@color/dark_blue"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/etNameUpdate"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="75sp"
            android:background="@drawable/btnbg1"
            android:fontFamily="@font/fjord_one"
            android:hint="Name"
            android:padding="15dp"
            android:textColor="@color/white_primary"
            android:textColorHint="@color/white_primary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvProfileEmail"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="145sp"
            android:fontFamily="@font/carnivales"
            android:text="Email"
            android:textColor="@color/dark_blue"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/etEmailUpdate"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200sp"
            android:fontFamily="@font/fjord_one"
            android:text="Email"
            android:textColor="@color/dark_blue"
            android:textSize="20sp" />

        <soup.neumorphism.NeumorphButton
            android:id="@+id/btnSave"
            app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/btnbg2"
            android:fontFamily="@font/fjord_one"
            android:text="Update"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            app:neumorph_lightSource="leftTop"
            app:neumorph_shadowColorDark="#ddd8ca"
            app:neumorph_shadowColorLight="#f8f5e9"/>


    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ivPictureUpdate"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.161"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>